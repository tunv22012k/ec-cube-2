{% extends '@admin/default_frame.twig' %}

{% set menus = ['product', 'options'] %}

{% block title %}{{ 'admin.product.options_list'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.product.product_management'|trans }}{% endblock %}

{% block javascript %}
    <script>
        $(function() {
            
        });
    </script>
{% endblock %}

{% block main %}
    <form role="form" name="form1" id="form1" method="post" action="{{ options.id ? url('admin_options_edit', {'id': options.id }) : url('admin_options_new') }}" novalidate enctype="multipart/form-data">
        {{ form_widget(form._token) }}
        {{ form_widget(form.return_link) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                {% if options.id %}
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="d-inline-block" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ 'tooltip.product.product_id'|trans }}">
                                                <span>Id options</span>
                                                <i class="fa fa-question-circle fa-lg ms-1"></i>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <p>{{ options.id }}</p>
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>Name options</span>
                                            <span class="badge bg-primary ms-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col mb-2">
                                        {{ form_widget(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block">
                                            <span>Fee options</span>
                                            <span class="badge bg-primary ms-1">
                                                {{ 'admin.common.required'|trans }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col mb-2">
                                        {{ form_widget(form.fee) }}
                                        {{ form_errors(form.fee) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a
                                class="c-baseLink"
                                href="{{ path('plugin_admin_options_page', { page_no : app.session.get('eccube.admin.options.search.page_no')|default('1') } ) }}"
                                data-action="confirm"
                                title="Go home"
                            >
                                <i class="fa fa-backward" aria-hidden="true"></i><span>Quay láº¡i</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{ options.id ? "Update" : "Create" }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}